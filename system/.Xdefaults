! urxvt

URxvt*geometry: 115x40
!URxvt*font: xft:DejaVuSansMonoForPowerline Nerd Font:pixelsize=16:antialias=true:hinting=true
!URxvt*boldFont: xft:DejaVuSansMonoForPowerline Nerd Font:bold:pixelsize=16:antialias=true:hinting=true
!URxvt*font: xft:Fura Code:pixelsize=18:antialias=true:hinting=true
!URxvt*boldFont: xft:Fura Code:bold:pixelsize=18:antialias=true:hinting=true
!URxvt*font: xft:InconsolataForPowerline Nerd Font:pixelsize=17:antialias=true:hinting=true
!URxvt*boldFont: xft:InconsolataForPowerline Nerd Font:bold:pixelsize=17:antialias=true:hinting=true
URxvt*font: xft:SauceCodePro Nerd Font:pixelsize=18:antialias=true:hinting=true
URxvt*boldFont: xft:SauceCodePro Nerd Font:bold:pixelsize=18:antialias=true:hinting=true

URxvt*depth: 24 
URxvt*borderless: 1
URxvt*scrollBar: false
URxvt*saveLines: 2000
URxvt.transparent: true
URxvt*.shading: 10

! Meta modifier for keybindings
!URxvt.modifier: super

!! perl extensions
URxvt.perl-ext: default,url-select,clipboard,selection-to-clipboard

! url-select (part of urxvt-perls package)
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.button: 2
URxvt.url-select.launcher: chromium-browser
URxvt.url-select.underline: true

! simple tabs
! URxvt.perl-ext-common: ...,tabbed,...

! copy and paste
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

